# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/tradejournal

# Environment - Defaults to production (safe mode) if not set
# Uncomment and set to 'development' to enable debug features and detailed query logging
# ENVIRONMENT=development

# Cloudinary Configuration (for image storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Application Configuration
DEBUG=False
CORS_ORIGINS=["http://localhost:3000", "https://your-frontend-domain.railway.app"]

# Security
SECRET_KEY=your_super_secure_secret_key_here

# Query Performance Monitoring (Optional)
# QUERY_LOGGING_ENABLED=true  # Enable/disable query logging
# SLOW_QUERY_THRESHOLD_MS=100  # Custom threshold for slow queries