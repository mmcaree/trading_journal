# Railway Configuration
# This file contains environment variables for Railway deployment

# Database Configuration
# Railway will automatically provide a DATABASE_URL for PostgreSQL
# DATABASE_URL will be automatically set by Railway

# Security Configuration
# Generate a secure secret key for production
SECRET_KEY=${{Railway.RAILWAY_SECRET_KEY}}

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=10080
ALGORITHM=HS256

# CORS Configuration for production
# Update with your actual frontend domain
CORS_ORIGINS=["https://your-frontend-domain.railway.app"]

# Production Environment Settings
ENVIRONMENT=production
DEBUG=false

# Optional: Redis Configuration (if using Railway Redis)
# REDIS_URL=${{Railway.RAILWAY_REDIS_URL}}

# Optional: External API Keys (if needed)
# BROKER_API_KEY=${{Railway.BROKER_API_KEY}}
# MARKET_DATA_API_KEY=${{Railway.MARKET_DATA_API_KEY}}